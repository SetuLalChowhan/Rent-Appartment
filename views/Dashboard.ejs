            margin-top: 100px;
        }


        .dashboard-container {
            display: grid;
            grid-template-rows: repeat(auto-fit, minmax(240px, auto));
            gap: 3rem;
            padding: 0 50px;
            /* border: 2px solid green; */


        }

        .dashboard-container .box {
            background: var(--bg-color);
