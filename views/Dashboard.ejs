            padding: 10px;
            box-shadow: var(--box-shadow);
            /* border: 2px solid black;  */
            width: auto;
            height: auto;
        }

        .dashboard-container .box:hover {
            transform: translateY(-10px);
            transition: 0.5s;
        }

        .dashboard-container .box img {
            border-radius: 1rem;
            height: 400px;
            object-fit: cover;
            object-position: center;
            /* border: 2px solid red; */
            margin-top: 20px;
        }

        .apartment-container .box h3 {
            font-weight: 600;
            font-size: 1rem;
            float: right;
        }

        .dashboard-container .box .content {
            display: flex;
            justify-content: space-between;
            margin-top: 2rem;
        }

        .dashboard-container .box .content .text h3 {
            font-weight: 500;
        }

        .dashboard-container .box .content .text p {
            font-size: 0.8rem;
        }

        .dashboard-container .box .content .icon {
            display: flex;
            align-items: left;
            column-gap: 1rem;
        }

        .dashboard-container .box .content .icon .bx {
            display: flex;
            align-items:left;
            font-size: 20px;
        }

        .dashboard-container .box .content .icon span {
            font-size: 12px;
            font-weight: 500px;
